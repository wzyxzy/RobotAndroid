<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/activity_choose_width"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="com.zgty.robotandroid.activity.ChooseTrainNo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_main_padding"
        android:layout_margin="@dimen/activity_choose_button_margin"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_main_left_bottom_margin"
        android:text="@string/choose_train_no"
        android:textSize="@dimen/activity_main_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_choose_divider"
        android:background="@color/divider_line" />

    <GridView
        android:id="@+id/gridview_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_main_left_bottom_margin"
        android:gravity="center"
        android:horizontalSpacing="@dimen/activity_main_left_bottom_margin"
        android:numColumns="8"
        android:verticalSpacing="@dimen/activity_main_left_bottom_margin" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_choose_divider"
        android:background="@color/divider_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/activity_main_left_bottom_margin"
            android:layout_marginRight="@dimen/activity_button_margin"
            android:layout_marginTop="@dimen/activity_main_left_bottom_margin"
            android:background="@drawable/button_normal_bg"
            android:clickable="true"
            android:paddingBottom="@dimen/activity_choose_button_margin"
            android:paddingLeft="@dimen/activity_main_left_bottom_margin"
            android:paddingRight="@dimen/activity_main_left_bottom_margin"
            android:paddingTop="@dimen/activity_choose_button_margin"
            android:text="@string/choose_train_back"
            android:textSize="@dimen/activity_main_text_size" />
    </RelativeLayout>

</LinearLayout>
