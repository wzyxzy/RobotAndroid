<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/activity_main_text_size</item>
        <item name="android:background">@drawable/bolder</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTextViewItem">
        <item name="android:textSize">@dimen/activity_item_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
