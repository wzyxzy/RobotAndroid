        <Button
            android:id="@+id/btn_offset"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="修正舵机"
            android:textSize="22sp" />        
        <EditText
            android:id="@+id/et_pc_serial"
            android:layout_width="500dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:hint="a5 fc"
