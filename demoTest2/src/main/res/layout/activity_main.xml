            android:textSize="22sp" >
        </EditText>

        <Button
            android:id="@+id/btn_tranparent"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="透传舵机指令"
            android:textSize="22sp" />
